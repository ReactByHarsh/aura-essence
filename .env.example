# Stack Auth Configuration
NEXT_PUBLIC_STACK_PROJECT_ID=your_stack_project_id
NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY=your_publishable_key
STACK_SECRET_SERVER_KEY=your_secret_key

# Neon Database
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# PhonePe Payment Gateway (Standard Checkout V2 with OAuth)
# IMPORTANT: These variable names are kept for compatibility, but now hold OAuth credentials
# PHONEPE_MERCHANT_ID = OAuth Client ID (e.g., SU2511171240178131721100)
# PHONEPE_SALT_KEY = OAuth Client Secret (e.g., 80ba47ea-3716-4cf9-b014-3a929ef91c98)
# PHONEPE_ENV = 'sandbox' for testing, 'production' for live
PHONEPE_MERCHANT_ID=your_client_id_here
PHONEPE_SALT_KEY=your_client_secret_here
PHONEPE_SALT_INDEX=1
PHONEPE_ENV=sandbox

# App URL (for PhonePe callbacks and redirects)
# For local development: http://localhost:3000
# For production deployment: https://www.auraelixir.co.in
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Next.js
NODE_ENV=development

